{% extends 'base.html.twig' %}

{% block title %}
	Products
{% endblock %}

{% block body %}

	<div class="product-list">
		{% for product in allProducts %}
			<div class="product">
				<form method="post" action="cart.php">
					<a href="/product/view?id={{product.id}}">
						<input type="hidden" name="idProduct" value="{{ product.id }}">
						<div>{{ product.title}}</div>
						<img src="https://picsum.photos/200/200?random={{ product.image }}" alt="pic_{{ product.image }}">
						<p>
							Цена:
							{{ product.price}}
							$</p>
						<input type="submit" name="product.id" value="Купить">
					</a>
				</form>
			</div>
		{% endfor %}

	</div>

{% endblock %}
